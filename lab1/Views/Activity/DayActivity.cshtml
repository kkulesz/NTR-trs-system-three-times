@model List<lab1.Models.DomainModel.Activity>;

<div class="text-center">
    <h1 class="display-4" style="margin-bottom: 2rem;">Activities</h1>


    <div class="text-left">
    <form asp-action="CreateActivityForm">
        <button type="submit" class="btn btn-primary" style="margin: 2px 3px;">Create new activity</button>
    </form>
    </div>


    <h3 style="margin-bottom: 1rem;">Activities</h3>



    <div class="btn-group" style="max-width: 50ch; margin-bottom: 2rem;">
        @foreach (var activity in Model)
        {
            <button class="btn btn-primary" style="margin: 2px 3px;">@activity.Code</button>
            <div>TODO: update, delete, read buttons</div>
        }
    </div>

</div>
